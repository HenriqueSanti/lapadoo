---
import Header from "./Header.astro";
---

<section class="text-pink-400 body-font h-screen bg-[url('https://images.unsplash.com/photo-1585851344977-64efb93b4f8a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1470&q=80')]">
    
    <Header />

    <div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-end h-screen">

      <!-- Headline-->  
      <div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center"> 

        <h1 class="title-font sm:text-4xl lg:text-8xl text-xl mb-4 font-medium text-pink-400">Before they sold out
          <br class="hidden lg:inline-block">readymade gluten
        </h1>

      </div>

      <!-- Image -->
      <div class="lg:max-w-lg lg:w-full md:w-1/2 w-5/6">
        <img class="object-cover object-center rounded" alt="hero" src="https://dummyimage.com/720x600">
      </div>
    </div>
  </section>