---
import ProjectView from "../components/ProjectView.astro";
---

<section class="text-gray-100 body-font">
    <div class="px-5 pt-12 flex flex-col md:flex-row gap-2 md:gap-5">

      <!-- Image -->

      <ProjectView 
          bgUrl = 'https://images.unsplash.com/photo-1693185371650-389b0c6184cc?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1476&q=80'
          bgAlt = 'dummyimage'
          projectUrl = 'https://dummyimage.com/200x150'
          projectAlt = 'alt'
      />


      <!-- Description -->

      <div class="flex flex-col justify-between lg:mb-0 w-full md:w-1/2 text-left p-10 bg-pink-400 rounded-3xl">

        <!-- Headling -->
        <div class="flex flex-col mb-10 items-start">
          <div class="flex-grow">
            <h2 class="text-gray-900 text-xl md:text-2xl xl:text-3xl 2xl:text-4xl title-font font-normal mb-3">
              Shooting Stars Code Challenge: Tweak the "Welcome to Astro" message above
            </h2>
          </div>
        </div>
        
        <!-- Illustration -->
        <div class="w-full mb-10 lg:mb-0 rounded-2xl overflow-hidden">
            <img alt="feature" class="object-cover object-center w-full h-full" src="https://dummyimage.com/200x150">
          </div>
      </div>
    </div>
  </section>