---
import MenuHead from "../components/MenuHead.astro";
import MenuNav from "../components/MenuNav.astro";
import MenuAbout from "../components/MenuAbout.astro";
---

<header class="text-gray-400 body-font">
    <div class="mx-auto pt-6 md:px-10 px-3 flex justify-between items-center">

      <!-- Logo -->  
      <a class="flex title-font font-medium items-center text-pink-50 mb-0">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="w-10 h-10 text-white p-2 bg-pink-500 rounded-full" viewBox="0 0 24 24">
          <path d="M12 2L2 7l10 5 10-5-10-5zM2 17l10 5 10-5M2 12l10 5 10-5"></path>
        </svg>
        <span class="ml-3 text-xl">Tailblocks</span>
      </a>

      <!-- Navbar -->

      

      <nav class="m-0 flex flex-col gap-10 items-center text-base justify-start bg-black w-full h-full md:w-2/3 fixed transition-all duration-700 ease-in-out z-20 overflow-y-scroll overflow-x-hidden pt-48">

        <MenuHead 
          content="We take your business where it will win hearts with a hands-on approach and an unashamedly organised process."
        />

        <div class="flex flex-wrap items-start w-full">
          <MenuNav 
            itemName="Home"
            itemUrl="#"
          />
          <MenuNav 
            itemName="Projects"
            itemUrl="#"
          />
          <MenuNav 
            itemName="Team"
            itemUrl="#"
          />
          <MenuNav 
            itemName="Wins"
            itemUrl="#"
          />
          <MenuNav 
            itemName="Courses"
            itemUrl="#"
          />
          <MenuNav 
            itemName="Blog"
            itemUrl="#"
          />
        </div>

        <div class="flex flex-wrap w-full px-6 md:px-16">
          <MenuAbout 
            title="m Titulo"
            initial="U"
            body="um texto bem bonito"
            imgUrl="https://dummyimage.com/300"
            imgAlt="dummyimage"
          />
        </div>
      </nav>

      <div class="buttons flex gap-4 z-30 fixed right-5">
        <button class="inline-flex items-center text-pink-50 bg-pink-400    border-0 py-2 px-6 focus:outline-none hover:bg-lime-200 hover:text-lime-900 rounded-full text-xl transition ease-in-out duration-300 ">
        Contato
        </button>

        <div class="menu flex flex-col justify-center align-baseline rounded-full h-12 w-12 bg-white cursor-pointer z-20">
          <span class="bar"></span>
          <span class="bar"></span>
        </div>
      </div>
    </div>

    <div class="dark-bg w-full h-full bg-black opacity-50 z-10 fixed top-0 left-0 transition-all duration-300 ease-in-out hidden"></div>
</header>

<style lang="scss">
  header {
    nav {
    left: -100%;
    top: 0;
  }
  nav.active {
    left: 0;
  }
  }
  .bar {
    display: block;
    width: 1.8rem;
    height: .16rem;
    margin: 2px auto;
    transition: all .3s ease-in-out;
    background-color: rgb(22, 11, 18);
  }

  .menu.active .bar:nth-child(1) {
    transform: translateY(3.2px) rotate(40deg);
  }

  .menu.active .bar:nth-child(2) {
    transform: translateY(-3.2px) rotate(-40deg);
  }

</style>

<script>
  const hamburger = document.querySelector(".menu");
  const nav = document.querySelector("nav");
  const body =  document.querySelector('body');
  const darkBg = document.querySelector('.dark-bg');

  hamburger.addEventListener('click', openMenu);

  function openMenu() {
    hamburger.classList.toggle("active");
    nav.classList.toggle("active");
    body.classList.toggle('overflow-hidden');
    darkBg.classList.toggle('hidden')
    
  }
</script>

